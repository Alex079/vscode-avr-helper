{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2021",
		"outDir": "out",
		"lib": [
			"ES2021"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"test-resources"
	]
}
