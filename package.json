{
	"name": "vscode-avr-helper",
	"displayName": "AVR Helper",
	"description": "Helper extension to simplify code compilation and flashing for AVR chips",
	"keywords": ["avr", "avrdude", "avr-gcc", "uploader"],
	"author": {
		"name": "Alex079"
	},
	"license": "MIT",
	"repository": {
		"url": "https://github.com/Alex079/vscode-avr-helper"
	},
	"publisher": "Alex079",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "AVR Helper",
				"properties": {
					"AVR.source.compiler": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "Path to compiler executable (avr-c++)"
					},
					"AVR.source.libraries": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [],
						"scope": "resource",
						"description": "Paths to folders containing source libraries"
					},
					"AVR.device.type": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "MCU type"
					},
					"AVR.device.frequency": {
						"type": "integer",
						"default": null,
						"scope": "resource",
						"description": "MCU frequency"
					},
					"AVR.programmer.tool": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "Path to programmer tool (avrdude)"
					},
					"AVR.programmer.definitions": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "Path to programmer definitions (avrdude.conf)"
					},
					"AVR.programmer.type": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "Programmer type"
					},
					"AVR.programmer.port": {
						"type": "string",
						"default": null,
						"scope": "resource",
						"description": "Programmer upload port"
					},
					"AVR.programmer.rate": {
						"type": "integer",
						"default": null,
						"scope": "resource",
						"description": "Programmer upload rate"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"extensionDependencies": [
		"ms-vscode.cpptools"
	]
}
