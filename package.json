{
	"name": "vscode-avr-helper",
	"displayName": "AVR Helper",
	"description": "Helper extension to simplify code compilation and flashing for AVR chips",
	"icon": "resources/icon.png",
	"keywords": [
		"avr",
		"avrdude",
		"avr-gcc",
		"uploader"
	],
	"author": {
		"name": "Alex079"
	},
	"license": "MIT",
	"repository": {
		"url": "https://github.com/Alex079/vscode-avr-helper"
	},
	"publisher": "Alex079",
	"version": "1.1.1",
	"engines": {
		"vscode": "^1.47.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension",
	"contributes": {
		"configuration": [
			{
				"title": "AVR Helper",
				"properties": {
					"AVR.source.compiler": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "Path to compiler executable (avr-c++)"
					},
					"AVR.source.libraries": {
						"type": "array",
						"items": {
							"type": "string"
						},
						"default": [],
						"scope": "resource",
						"description": "Paths to folders containing source libraries"
					},
					"AVR.device.type": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "MCU type"
					},
					"AVR.device.frequency": {
						"type": [
							"integer",
							"null"
						],
						"default": null,
						"scope": "resource",
						"description": "MCU frequency"
					},
					"AVR.programmer.tool": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "Path to programmer tool (avrdude)"
					},
					"AVR.programmer.definitions": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "Path to programmer definitions (avrdude.conf)"
					},
					"AVR.programmer.type": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "Programmer type"
					},
					"AVR.programmer.port": {
						"type": "string",
						"default": "",
						"scope": "resource",
						"description": "Programmer upload port"
					},
					"AVR.programmer.rate": {
						"type": [
							"integer",
							"null"
						],
						"default": null,
						"scope": "resource",
						"description": "Programmer upload rate"
					}
				}
			}
		],
		"commands": [
			{
				"command": "AVR.command.setup.tools",
				"title": "Perform initial setup",
				"category": "AVR Helper"
			},
			{
				"command": "AVR.command.setup.device",
				"title": "Select device",
				"category": "AVR Helper"
			},
			{
				"command": "AVR.command.setup.programmer",
				"title": "Select programmer",
				"category": "AVR Helper"
			},
			{
				"command": "AVR.command.build",
				"title": "Build",
				"category": "AVR Helper"
			},
			{
				"command": "AVR.command.flash",
				"title": "Flash",
				"category": "AVR Helper"
			}
		]
	},
	"scripts": {
		"dist": "webpack",
		"build": "webpack --config webpack.dev",
		"watch": "webpack --config webpack.dev --watch",
		"lint": "eslint --ext .ts --fix src src",
		"clean": "rm -rf dist",
		"test": "node dist/test/wrapper",
		"verify": "yarn lint && yarn clean && yarn build && yarn test",
		"vscode:prepublish": "yarn clean && yarn dist"
	},
	"devDependencies": {
		"@types/chai": "^4",
		"@types/glob": "^7",
		"@types/mocha": "^7",
		"@types/node": "^13",
		"@types/vscode": "^1",
		"@typescript-eslint/eslint-plugin": "^2",
		"@typescript-eslint/parser": "^2",
		"chai": "^4",
		"eslint": "^6",
		"glob": "^7",
		"mocha": "^7",
		"ts-loader": "^7",
		"typescript": "^3",
		"vscode-test": "^1",
		"webpack": "^4",
		"webpack-cli": "^3",
		"webpack-merge": "^4",
		"webpack-node-externals": "^1"
	},
	"extensionDependencies": [
		"ms-vscode.cpptools"
	]
}
