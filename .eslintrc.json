{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "semi": "warn",
        "no-unused-expressions": "warn",
        "sort-imports": ["warn", {
            "ignoreCase": true,
            "ignoreDeclarationSort": true
        }]
    }
}
